@using Test.ViewModels.UserVM
@model LoginViewModel
@{
    Layout = "~/Views/Shared/_RegisterLayout.cshtml";
}

<h1 class="d-flex flex-row justify-content-center pt-4 mt-4">@ViewData["Title"]</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="p-5">
        <div class="alert alert-success text-center d-flex flex-row justify-content-around" role="alert">
            <div class="d-flex flex-row justify-content-end">
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            <div class="text-center">
                <p class="text-dark fw-bold"> @TempData["SuccessMessage"]</p>
            </div>
        </div>
    </div>
}

<div>
    <form asp-controller="Account" asp-action="Login" method="post" class=" d-flex flex-column align-items-center mb-3">
        <div class="form-group col-5 mb-3">
            <label for="Email">Username</label>
            <input type="text" class="form-control inputBackground" asp-for="Email" aria-describedby="NameHelpId" placeholder="">
            <small  asp-validation-for="Email" class="form-text text-muted"></small>
        </div>
        <div class="form-group col-5 mb-3">
            <label for="Password">Password</label>
            <input type="password" class="form-control inputBackground" asp-for="Password" aria-describedby="PasswordHelpId" placeholder="">
            <small asp-validation-for="Password" class="form-text text-muted"></small>
        </div>
        <div class="form-check mb-3">
            <input class="form-check-input" asp-for="Remeberme" type="checkbox" value="">
            <label class="form-check-label" for="Remeberme">
                Remember me
            </label>
        </div>
        <div>
            <button class="btn btn-outline-success" type="submit" >submit</button>
        </div>
    </form>
    <div class="d-flex flex-row justify-content-center">
        <a asp-controller="Account" asp-action="Register">I Have not Account."Create Account"</a>
    </div>
</div>