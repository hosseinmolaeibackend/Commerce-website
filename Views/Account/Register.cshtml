@using Test.ViewModels.UserVM
@model RegisterViewModel
@{
    Layout = "~/Views/Shared/_RegisterLayout.cshtml";
}

<h1 class="d-flex flex-row justify-content-center pt-4 mt-4 mb-3">@ViewData["Title"]</h1>
<div>
    <form asp-controller="Account" asp-action="Register" method="post" enctype="multipart/form-data"
    class="d-flex flex-column align-items-center mb-4">
        <div>
            <img src="~/Images/icecream.png" style="border-radius:50%; width:250px;"/>
        </div>
        <div class="form-group col-5 mb-3">
            <label for="InputEmail">Profile image</label>
            <input type="file" class="form-control" asp-for="Profilimg"  accept="image/png, image/jpg">
            <small id="RePasswordHelpId" asp-validation="" class="form-text text-muted"></small>
        </div>
        <div class="form-group col-5 mb-3">
            <label for="InputEmail">Name</label>
            <input type="text" class="form-control" asp-for="Name" aria-describedby="NameHelpId" placeholder="">
            <small id="NamelHelpId" asp-validation="Name" class="form-text text-muted"></small>
        </div>
        <div class="form-group col-5 mb-3">
            <label for="InputEmail">Email</label>
            <input type="text" class="form-control" asp-for="Email"  aria-describedby="FamilyHelpId" placeholder="">
            <small id="FamilyHelpId" asp-validation="Email" class="form-text text-muted"></small>
        </div>
        <div class="form-group col-5 mb-3">
            <label for="InputEmail">Phone</label>
            <input type="tel" class="form-control" asp-for="Phone" aria-describedby="emailHelpId" placeholder="">
            <small id="emailHelpId" asp-validation="Phone" class="form-text text-muted"></small>
        </div>
        <div class="form-group col-5 mb-3">
            <label for="InputEmail">Password</label>
            <input type="password" class="form-control" asp-for="Password" aria-describedby="PasswordHelpId" placeholder="">
            <small id="PasswordHelpId" asp-validation="Password" class="form-text text-muted"></small>
        </div>
        <div class="form-group col-5 mb-3">
            <label for="InputEmail">Re-Password</label>
            <input type="password" class="form-control" asp-for="RePassword" aria-describedby="RePasswordHelpId" placeholder="">
            <small id="RePasswordHelpId" asp-validation="RePassword" class="form-text text-muted"></small>
        </div>
       
        <div class="mb-3">
            <button class="btn btn-outline-success" type="submit">submit</button>
        </div>
    </form>
</div>

<div class="d-flex flex-column align-items-center mt-1 mb-5">
    <a asp-controller="Account" asp-action="Login">I Have An Account </a>
</div>